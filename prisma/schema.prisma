// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

model User {
  id              Int       @id @default(autoincrement())
  address         String?   @db.VarChar(50)
  fname           String?   @db.VarChar(40)
  lname           String?   @db.VarChar(40)
  dob             DateTime? @db.Timestamp()
  email           String    @unique @db.VarChar(80)
  username        String    @unique @db.VarChar(25)
  password        String?   @db.VarChar(180)
  isVerified      Boolean   @default(false)
  currentOTP      Int?      @db.Integer
  loginToken      String?   @db.VarChar(100)
  googleAuthToken String?   @db.VarChar(50)
  phoneNumber     String?   @db.VarChar(18)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  Posts           Post[]

  @@map("users")
}

model Post {
  id            Int       @id @default(autoincrement())
  title         String    @db.VarChar(120)
  slug          String    @unique @db.VarChar(130)
  description   String    @db.Text
  imageUrl      String?   @db.VarChar(150)
  thumbImageUrl String?   @db.VarChar(150)
  isDraft       Boolean   @default(false)
  user          User?     @relation(fields: [userId], references: [id])
  userId        Int?      @db.Integer
  category      Category? @relation(fields: [categoryId], references: [id])
  categoryId    Int?      @db.Integer
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  completed     Int       @default(0) @db.SmallInt

  @@index([userId])
  @@index([categoryId])
  @@map("post")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(25)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post[]

  @@map("categories")
}
